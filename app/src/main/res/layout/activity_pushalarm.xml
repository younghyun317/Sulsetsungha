<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="250dp"
    android:layout_gravity="center"
    android:background="@drawable/donation_alarm"
    android:orientation="vertical"
    android:weightSum="9"
    tools:context=".PushAlarmActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:paddingLeft="30dp">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/donation_red" />

        <TextView
            android:id="@+id/textView32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="포인트 기부"
            android:textColor="#F58778"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:paddingLeft="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginRight="20dp"
            android:textColor="#000000"
            android:text="기부할 포인트" />

        <EditText
            android:id="@+id/edt_point"
            android:layout_width="155dp"
            android:layout_height="35dp"
            android:background="@drawable/use_point"
            android:ems="10"
            android:hint="0"
            android:inputType="textPersonName"
            android:paddingLeft="10dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView35"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="75dp"
        android:textSize="12sp"
        android:layout_weight="1.5"
        android:gravity="center"
        android:text="* 소멸된 포인트는 되돌릴 수 없습니다." />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_cancel" />

        <Button
            android:id="@+id/btn_donate"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:background="@drawable/btn_donate"/>
    </LinearLayout>

</LinearLayout>